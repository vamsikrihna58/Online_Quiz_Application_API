package com.Online_Quiz_Application_API.Entity;

import java.util.ArrayList;
import java.util.List;

import com.fasterxml.jackson.annotation.JsonManagedReference;

import jakarta.annotation.Generated;
import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.OneToMany;
import jakarta.persistence.Table;
import lombok.Data;

@Entity
@Table(name = "quesions_information")
public class Questions {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Column(name="id")
	private int id;
    @Column(name="question")
	private String name;
    
//    @Column(name="question_number")
//    private String question_Number;
    
    @ManyToOne
    @JoinColumn(name = "quiz_id", referencedColumnName = "id")
    @JsonManagedReference
    private Quiz_Management quiz_management;
    
    @OneToMany(mappedBy = "questions" , cascade = CascadeType.ALL)
    @JsonManagedReference
    private List<OptionsEntity> optionsEntities;
    
    
	public int getId() {
		return id;
	}
	public List<OptionsEntity> getOptionsEntities() {
		return optionsEntities;
	}
	public void setOptionsEntities(List<OptionsEntity> optionsEntities) {
		this.optionsEntities = optionsEntities;
	}
	public void setId(int id) {
		this.id = id;
	}
	public Quiz_Management getQuiz_management() {
		return quiz_management;
	}
//	public String getQuestion_Number() {
//		return question_Number;
//	}
//	public void setQuestion_Number(String question_Number) {
//		this.question_Number = question_Number;
//	}
	public void setQuiz_management(Quiz_Management quiz_management) {
		this.quiz_management = quiz_management;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
    
    
    
}
